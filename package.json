{
  "name": "@beaulewis/saas-cli",
  "version": "1.0.2",
  "description": "A unified CLI tool for Flutter SaaS development with live documentation, code generation, and backend integration",
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "bin": {
    "saas": "./bin/saas.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "bin",
    "dist",
    "templates"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "format:check": "biome format src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.1.0",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "dotenv": "17.2.3",
    "got": "^14.6.6",
    "handlebars": "^4.7.8",
    "keyv": "^5.5.5",
    "keyv-file": "^5.3.3",
    "ora": "^9.0.0",
    "picocolors": "^1.1.1",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "cli",
    "flutter",
    "saas",
    "supabase",
    "riverpod",
    "drift",
    "code-generation",
    "documentation"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Beaulewis1977/saas-cli.git"
  },
  "homepage": "https://github.com/Beaulewis1977/saas-cli#readme",
  "bugs": {
    "url": "https://github.com/Beaulewis1977/saas-cli/issues"
  },
  "author": "Beau Lewis <blewisxx@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
